<div class="container">
    <div id="editbox" class="w3-row-padding w3-round-xlarge w3-light-gray">
        <form action="/upload" class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" method="post">
            <input type="hidden" name="page_type" value="<%= page_type %>">
            <h2 class="w3-center"><%= title %></h2>
            <!-- Department layout -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-users"></i></div>
                <div class="w3-rest">
                    <input id="dep" class="w3-input w3-border" name="dep" type="text" readonly="true" placeholder="Department here" value="<%= thisdep %>">
                </div>
            </div>
            <!-- lecturer Name -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                <div class="w3-rest">
                    <input id="lecturer" class="w3-input w3-border" name="lecturer" type="text" placeholder="Lecturer Name" value="<%= user %>">
                </div>
            </div>
            <!-- Title Name -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-book"></i></div>
                <div class="w3-rest">
                    <input id="title" class="w3-input w3-border" name="title" type="text" placeholder="Title Name" value="<%= thistitle %>">
                </div>
            </div>

            <!-- About -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-comments-o" aria-hidden="true"></i></div>
                <div class="w3-rest">
                    <input id="about" class="w3-input w3-border" name="about" type="text" placeholder="modify this article..." value="<%= thisabout %>">
                </div>
            </div>
            <!-- url -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-picture-o" aria-hidden="true"></i></div>
                <div class="w3-rest">
                    <input id="img_url" class="w3-input w3-border" name="img_url" type="text" placeholder="modify your image url (from online resource. Ex: imgur...)" value="<%= thisimg %>">
                </div>
            </div>

            <!-- Content of lecture -->
            <div class="w3-row w3-section">
                <div class="form-group">
                    <label for="comment">Lecture:</label>
                    <textarea class="form-control" rows="20" id="content" name="content"><%= thiscontent %></textarea>
                </div>
            </div>
            <!-- Submit -->
            <div class="w3-row w3-section">
                <div class="w3-half">
                    <input type="submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding w3-round-large" value="Update">
                </div>
                <div class="w3-half">
                    <input type="reset" class="w3-button w3-block w3-section w3-red w3-ripple w3-padding w3-round-large" value="Delete">
                </div>
            </div>
        </form>
    </div>
</div>
