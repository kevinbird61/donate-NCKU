<div class="container">
    <div id="donateinfo" class="w3-row-padding w3-round-xlarge w3-light-gray">
        <!-- <form action="" class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" method="post"> -->
            <h2 class="w3-center">Please fulfill your payment information</h2>
            <!-- lecturer Name -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                <div class="w3-rest">
                    <input id="donator" class="w3-input w3-border" name="lecturer" type="text" placeholder="Your Name">
                </div>
            </div>
            <!-- Bank Account -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-book"></i></div>
                <div class="w3-rest">
                    <input id="bank" class="w3-input w3-border" name="title" type="text" placeholder="Your bank account">
                </div>
            </div>
            <!-- Donate momey -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-usd"></i></div>
                <div class="w3-rest">
                    <input id="donate_dollar" class="w3-input w3-border" name="title" type="text" readonly="true" placeholder="Money">
                </div>
            </div>
            <!-- Currency -->
            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-usd"></i></div>
                <div class="w3-rest">
                    <input id="donate_currency" class="w3-input w3-border" name="title" type="text" readonly="true" placeholder="Currency">
                </div>
            </div>
            <!-- Content of lecture -->
            <div class="w3-row w3-section">
                <div class="form-group">
                    <label for="comment">The suggestion you want to tell us</label>
                    <textarea class="form-control" rows="10" id="suggestion" name="suggestion"></textarea>
                </div>
            </div>
            <!-- Submit -->
            <div class="w3-row w3-section">
                <div class="w3-half">
                    <button onclick="goDonate()" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding w3-round-large">Submit</button>
                </div>
                <div class="w3-half">
                    <input type="reset" class="w3-button w3-block w3-section w3-red w3-ripple w3-padding w3-round-large" value="Delete">
                </div>
            </div>
        <!-- </form> -->
    </div>
</div>
